namespace ConsumerClasses;

class AlwaysAppliance : Appliances {

    public AlwaysAppliance(string name, float wattage) {
        this.name = name;
        this.wattage = wattage;
        this.weekly = false;
        this.always = true;
        this.daily = false;
    }

    public float[] calculateEnergyCosts(float[] hours) {
        this.hours = hours;
    }
} 